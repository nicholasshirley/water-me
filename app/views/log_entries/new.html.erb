<div class="container">
  <div class="columns is-centered">
    <div class="column is-4">
      <%= form_for @entry do |f| %>
        <div class="field">
          <%= f.label :date, class: "label" %>
          <div class="control">
            <%= f.date_select :date %>
          </div>
        </div>

        <div class="field">
          <%= f.label :volume, class: "label" %>
          <div class="control has-icons-left">
            <%= f.text_field :volume, class: "input" %>
            <span class="icon is-small is-left">
              <i class="fas fa-tint"></i>
            </span>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.submit class: "button is-link" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>