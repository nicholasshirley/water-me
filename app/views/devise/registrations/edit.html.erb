<div class="columns">
  <div class="column">
    <div class="section">
      <div class="level-item">
        <div>

          <h2 class="title">Edit <%= resource_name.to_s.humanize %></h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= devise_error_messages! %>

            <div class="field">
              <%= f.label :email, class: "label" %>
              <div class="control has-icons-left">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
                <span class="icon is-small is-left">
                  <i class="far fa-envelope"></i>
                </span>
              </div>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div class="notification is-warning">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="field">
              <%= f.label :password, class: "label" %> <i>(leave blank if you don't want to change it)</i>
              <div class="control">
                <%= f.password_field :password, autocomplete: "off", class: "input" %>
                <% if @minimum_password_length %>
                  <br />
                  <em><%= @minimum_password_length %> characters minimum</em>
                <% end %>
              </div>
            </div>

            <div class="field">
              <%= f.label :password_confirmation, class: "label" %><br />
              <div class="control">
                <%= f.password_field :password_confirmation, autocomplete: "off", class: "input" %>
              </div>
            </div>

            <div class="field">
              <%= f.label :current_password, class: "label" %> <i>(we need your current password to confirm your changes)</i><br />
              <div class="control">
                <%= f.password_field :current_password, autocomplete: "off", class: "input" %>
              </div>
            </div>

            <div class="actions field">
              <%= f.submit "Update", class: "button is-link" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="section">
      <div class="level-item">
        <div>
          <h3 class="title">Cancel my account</h3>

          <p>Really want to go? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "button is-link is-danger" %></p>

          <%= link_to "Back", :back %>
        </div>
      </div>
    </div>
  </div>
</div>
